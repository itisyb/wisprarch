[Unit]
Description=Audetic Voice Transcription Service
Documentation=https://github.com/silvabyte/Audetic
After=graphical-session.target

[Service]
Type=simple
ExecStart=/usr/local/bin/audetic
Restart=always
RestartSec=5

# Logging
StandardOutput=journal
StandardError=journal
Environment="RUST_LOG=info"

# Security and resource limits (optional)
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=%h/.config/audetic %t
# Whisper models require significant memory (3-5GB for larger models)
MemoryLimit=6G
CPUQuota=80%

# Required for audio access
SupplementaryGroups=audio

[Install]
WantedBy=default.target